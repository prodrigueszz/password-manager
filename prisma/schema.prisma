generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String
  secrets Secret[] 
}

model Secret {
  id String @id @default(uuid())
  site String
  login_identifier String
  password String
  owner_id String
  user User @relation(fields: [owner_id], references: [id], onDelete: Cascade)
}

